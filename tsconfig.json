{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"],
      "@services/*": ["services/*"],
      "@customTypes/*": ["types/*"],   // ðŸ‘ˆ Ø¨Ø¯Ù„ @types Ø¨Ø®Ù„ÙŠÙ‡Ø§ @customTypes
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src", "__tests__"]
}
